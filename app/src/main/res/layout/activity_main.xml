<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/main_Banner"
        android:layout_width="0dp"
        android:layout_height="321dp"
        app:layout_constraintDimensionRatio="w,4:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carsbanner" />

    <ImageView
        android:id="@+id/main_Poster"
        android:layout_width="160dp"
        android:layout_height="236dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_Banner"
        app:layout_constraintDimensionRatio="w,2:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_Banner"
        app:srcCompat="@drawable/carscover" />

    <TextView
        android:id="@+id/main_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Cars"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/main_Poster"
        app:layout_constraintTop_toBottomOf="@+id/main_Banner"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/main_Bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/main_Title"
        app:layout_constraintTop_toBottomOf="@+id/main_Banner"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bookmark" />

    <TextView
        android:id="@+id/main_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="June 2006 G 117 Minutes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/main_Poster"
        app:layout_constraintTop_toBottomOf="@+id/main_Title"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/main_Rent"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Rent from $3.99"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_Buy"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_Poster"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/main_Buy"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Buy From $7.99"
        app:layout_constraintBottom_toBottomOf="@+id/main_Rent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_Rent" />

    <View
        android:id="@+id/main_Divider_Stats"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_Rent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/main_Rating_Background"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/main_Tomato_Background"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_Divider_Stats"
        app:srcCompat="@drawable/googleplaypolygon" />

    <ImageView
        android:id="@+id/main_Tomato_Background"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_Rating_Background"
        app:layout_constraintEnd_toStartOf="@+id/main_Family_Background"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_Rating_Background"
        app:srcCompat="@drawable/ic_baseline_circle_24"
        app:tint="#EF99AA" />

    <ImageView
        android:id="@+id/main_Family_Background"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:tint="#E91E47"
        app:layout_constraintBottom_toBottomOf="@+id/main_Tomato_Background"
        app:layout_constraintEnd_toStartOf="@+id/main_Similar_Background"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_Tomato_Background"
        app:srcCompat="@drawable/ic_baseline_circle_24" />

    <ImageView
        android:id="@+id/main_Similar_Background"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:tint="#E91E47"
        app:layout_constraintBottom_toBottomOf="@+id/main_Family_Background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_Family_Background"
        app:srcCompat="@drawable/ic_baseline_circle_24" />

    <TextView
        android:id="@+id/main_Rating_Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.4k Ratings"
        app:layout_constraintEnd_toEndOf="@+id/main_Rating_Background"
        app:layout_constraintStart_toStartOf="@+id/main_Rating_Background"
        app:layout_constraintTop_toBottomOf="@+id/main_Rating_Background" />

    <TextView
        android:id="@+id/main_Tomato_Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="94%"
        app:layout_constraintEnd_toEndOf="@+id/main_Tomato_Background"
        app:layout_constraintStart_toStartOf="@+id/main_Tomato_Background"
        app:layout_constraintTop_toBottomOf="@+id/main_Tomato_Background" />

    <TextView
        android:id="@+id/main_Family_Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family"
        app:layout_constraintEnd_toEndOf="@+id/main_Family_Background"
        app:layout_constraintStart_toStartOf="@+id/main_Family_Background"
        app:layout_constraintTop_toBottomOf="@+id/main_Family_Background" />

    <TextView
        android:id="@+id/main_Similar_Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Similar"
        app:layout_constraintEnd_toEndOf="@+id/main_Similar_Background"
        app:layout_constraintStart_toStartOf="@+id/main_Similar_Background"
        app:layout_constraintTop_toBottomOf="@+id/main_Similar_Background" />

    <TextView
        android:id="@+id/main_Rating_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.9"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/main_Rating_Background"
        app:layout_constraintEnd_toEndOf="@+id/main_Rating_Background"
        app:layout_constraintStart_toStartOf="@+id/main_Rating_Background"
        app:layout_constraintTop_toTopOf="@+id/main_Rating_Background" />

    <ImageView
        android:id="@+id/main_Tomato_Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/main_Tomato_Background"
        app:layout_constraintEnd_toEndOf="@+id/main_Tomato_Background"
        app:layout_constraintStart_toStartOf="@+id/main_Tomato_Background"
        app:layout_constraintTop_toTopOf="@+id/main_Tomato_Background"
        app:srcCompat="@drawable/tomato" />

    <ImageView
        android:id="@+id/main_Family_Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/main_Family_Background"
        app:layout_constraintEnd_toEndOf="@+id/main_Family_Background"
        app:layout_constraintStart_toStartOf="@+id/main_Family_Background"
        app:layout_constraintTop_toTopOf="@+id/main_Family_Background"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

    <ImageView
        android:id="@+id/main_Similar_Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/main_Similar_Caption"
        app:layout_constraintEnd_toEndOf="@+id/main_Similar_Background"
        app:layout_constraintStart_toStartOf="@+id/main_Similar_Background"
        app:layout_constraintTop_toTopOf="@+id/main_Similar_Background"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <View
        android:id="@+id/main_Divider_Description"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_Rating_Caption" />

    <TextView
        android:id="@+id/main_Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Mcqueen starts as a selfish car. On his way to the race to break the 3 way tie, he gets lost. He finds a small town, Radiator Springs. There he learns valuable lessons. Will these lessons help him win the Grand Prix? Buy or rent now to find out!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_Divider_Description"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>